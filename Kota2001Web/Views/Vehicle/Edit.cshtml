@model VehicleFormModel

@{
    ViewBag.Title = "Edit Vehicle";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post" asp-controller="Vehicle" asp-action="Edit">
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="Модел...">
                <span asp-validation-for="Model" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegNumber"></label>
                <input asp-for="RegNumber" class="form-control" placeholder="Рег.Номер...">
                <span asp-validation-for="RegNumber" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thirdpartyliabilityinsurance"></label>
                <input asp-for="Thirdpartyliabilityinsurance" class="form-control" placeholder="Гражданска Отг. ...">
                <span asp-validation-for="Thirdpartyliabilityinsurance" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Casko"></label>
                <input asp-for="Casko" class="form-control" placeholder="Каско...">
                <span asp-validation-for="Casko" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VType"></label>
                <input asp-for="VType" class="form-control" placeholder="Клас...">
                <span asp-validation-for="VType" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>