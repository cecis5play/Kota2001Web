@model LoginFormModel
@{
    ViewBag.Title = "Вход";
}

</div>
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Вход</h3>
                        <div>
                            @if (ViewData.ModelState.ErrorCount > 0)
                            {
                                <div class="text-danger-h4" asp-validation-summary="All"></div>
                            }
                        <form method="post" asp-controller="User" asp-action="Login">


                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div data-mdb-input-init class="form-outline">
                                        <label class="form-label" for="emailAddress">Email</label>
                                        <input asp-for="Email" type="email" id="emailAddress" class="form-control form-control-lg" />
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div data-mdb-input-init class="form-outline">
                                        <label class="form-label" for="password">Парола</label>
                                        <input asp-for="Password" type="password" id="password" class="form-control form-control-lg" />
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>


                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div data-mdb-input-init class="form-outline">
                                        <label class="form-label" for="isPersistent">Запомни ме</label>
                                        <input asp-for="IsPersistent" type="checkbox" id="isPersistent" />
                                        <span class="text-danger" asp-validation-for="IsPersistent"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="mt-4 pt-2">
                                <input data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit" value="Вход" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
